<h4>Post details:</h4>
<br />
<p>
	<%= @row['content'] %>
	<br />
	<br />
	Added at <%= @row['created_date'] %>
</p>
<br />
<h4>Comments:</h4>
<br />
<% @comments.each do |comment| %>
		<p>
			<%= comment['content'] %>
			<br />
			<br />
			<span style="font-size: 75%; color: #999">Added at <%= comment ['created_date'] %></span>
			<hr />	
		</p>
<% end %>


<p>
	
	<form role="form" method="POST" action="/details/<%= @row['id'] %>">
	
		<textarea name="content" class="form-control" rows="6" placeholder="Type comment here"></textarea>
		
		<br />
	 	
	 	<button type="submit" class="btn btn-primary">Add comment</button>
	
	</form>

</p>